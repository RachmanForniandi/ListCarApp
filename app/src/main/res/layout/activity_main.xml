<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/list_item_data"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:name="id.co.listcarapp.ListDataFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        tools:layout="@layout/fragment_list_data" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_data"
        app:layout_constraintTop_toTopOf="parent">


        <fragment
            android:id="@+id/fragment3"
            android:name="id.co.listcarapp.ButtonFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout="@layout/fragment_button"/>

        <fragment
            android:id="@+id/fragment4"
            android:name="id.co.listcarapp.CarInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:layout="@layout/fragment_car_info"/>

        <fragment
            android:id="@+id/fragment5"
            android:name="id.co.listcarapp.OwnerInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:layout="@layout/fragment_owner_info"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>